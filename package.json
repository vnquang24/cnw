  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' next dev",
    "dev-turbo": "NODE_OPTIONS='--max-old-space-size=8192' next dev --turbopack",
    "dev-window": "cross-env NODE_OPTIONS='--max-old-space-size=8192' next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' next build",
    "build-window": "cross-env NODE_OPTIONS='--max-old-space-size=8192' next build",
    "start": "next start",
